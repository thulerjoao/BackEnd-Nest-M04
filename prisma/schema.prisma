// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(uuid())
  name      String   @unique
  image     String
  description String
  ageRating Int
  score     Float
  price     Float

  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @updatedAt @map("updated_at")

  profiles Profile[]
  genres Genre[]

  @@map("game")
}

model Genre {
  id        String   @id @default(uuid())
  genre     String   @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  games Game[]

  @@map("genre")
}

model User{
  id        String   @id @default(uuid())
  name      String
  email     String  @unique
  password  String
  cpf       String @unique
  isAdmin  Boolean

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profiles Profile[]

  @@map("user")
}

model Profile{
  id        String   @id @default(uuid())

  name      String
  photo     String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  games Game[]

  @@map("profile")

}
